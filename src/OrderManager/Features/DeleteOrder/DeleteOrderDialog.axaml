<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="150"
        x:Class="OrderManager.Features.DeleteOrder.DeleteOrderDialog"
        Title="Delete Order"
        Width="300"
        Height="150">
  
  <Grid RowDefinitions="*,50">
    <TextBlock Grid.Row="0"
               VerticalAlignment="Center"
               Width="250"
               TextWrapping="Wrap"
               TextAlignment="Center"
               Text="{ Binding Message }"/>
    <StackPanel Grid.Row="1"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Spacing="10"
                Margin="10">
      <Button Classes="Secondary" Command="{Binding CancelDeleteCommand}" >Cancel</Button>
      <Button Classes="Danger" Command="{Binding DeleteOrderCommand}" >Delete</Button>
    </StackPanel>
  </Grid>
  
</Window>
