<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="350"
        x:Class="OrderManager.Features.Ribbon.ReleaseProfiles.ProfileManagerDialog"
        Title="Profile Manager"
        CanResize="False"
        Width="300"
        Height="350">
  
  <Grid RowDefinitions="Auto,*">

    <Grid Grid.Row="0" ColumnDefinitions="*,*,*" Margin="10">
      <Button Grid.Column="0"
              HorizontalAlignment="Center"
              Content="+ New"
              Command="{ Binding CreateNewProfileCommands }"/>
      <Button Grid.Column="1"
              HorizontalAlignment="Center"
              Content="Edit"
              Command="{ Binding EditSelectedProfileCommand }"/>
      <Button Grid.Column="2"
              HorizontalAlignment="Center"
              Classes="Danger"
              Content="Delete"
              Command="{ Binding DeleteSelectedProfileCommand }"/>
    </Grid>

    <ListBox Grid.Row="1" Margin="20">
      <ListBoxItem>Profile A</ListBoxItem>
      <ListBoxItem>Profile B</ListBoxItem>
      <ListBoxItem>Profile C</ListBoxItem>
      <ListBoxItem>Profile D</ListBoxItem>
    </ListBox>
    
  </Grid>
</Window>
