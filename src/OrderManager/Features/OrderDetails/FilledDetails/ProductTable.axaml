<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="OrderManager.Features.OrderDetails.FilledDetails.ProductTable">

  <Border BorderBrush="Black" BorderThickness="1" Padding="10">
    <StackPanel>
      <TextBlock Name="ProductName" Text="Ordered Items" HorizontalAlignment="Center" TextAlignment="Center"/>
      <!-- Orders should not be editable once they are uploaded -->
      <DataGrid Name="ProductGrid" IsReadOnly="True"/>
    </StackPanel>
  </Border>
  
</UserControl>
